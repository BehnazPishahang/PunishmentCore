            Class="ma-0"
            Style="color:red;font-weight:bold;"
            href="/isConstracting"
            target="blank"
            rel="noopener noreferrer">
            <MudPaper   Elevation="25" Class="d-flex flex-row pt-6 pb-4" Style="height:100px;">
                <MudIcon Icon="@Icons.Material.Filled.Payments" Color="Color.Info" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
                <div>
                    <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">‍‍‍پرداخت  وجه  </MudText>
                  
                </div>

            </MudPaper>
            </MudElement>
       </MudItem>  
       <MudButton @onclick="onGotToDirect">FrmNoticeMain</MudButton>
    </MudGrid>


        
</MudContainer>

@code
{

    MudBlazor.Color _iconColor = Color.Info;

    private void onGotToDirect()
    {
         _navigationManager.NavigateTo("/FrmNoticeMain");
    }

}
