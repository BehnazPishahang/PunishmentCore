@page "/FrmNoticeMain"


<FrmNoticeSearchComponent OnNoticeSearch="HandleNoticeSearch"> </FrmNoticeSearchComponent>


@if(Elements?.Count()>0)
{
  
        <MudChip>@Elements.Count()</MudChip>

}
else
{
   <MudChip>0</MudChip>
 }


@if (Elements is null)
{
    <p><em>Loading... !</em></p>
}
else
{
    <table class="table">
            <thead>
                <tr>
                    <th>  زمان ثبت </th>
                    <th> شماره</th>
                    <th>  تاريخ ابلاغ </th>
                    <th>  نام  ابلاغ شونده</th>
                    <th>  نام خانوادگي ابلاغ شوند</th>
                </tr>
            </thead>
        <tbody>
            @foreach(var emp in Elements)
                {
                    <tr>
               
                        <td>@emp.CreateDateTime</td>
                         <td>@emp.No</td>
                         <td>@emp.NoticeDate</td
                         <td>@emp.NoticePersonName</td>
                        <td>@emp.NoticePersonFamily</td>
                
                    </tr>
                }
        </tbody>
    </table>
    }

